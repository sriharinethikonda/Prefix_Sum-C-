#include<iostream>
#include<bits/stdc++.h>
using namespace std;
int main(){
	int n,k;
	cin>>n>>k;
	int arr[n];
	for(int i=0;i<n;i++)
	cin>>arr[i];
	map<int,int>mp;
	int count=0;
	int prefix=0;
	int i=0;
while(i<n){
		prefix+=arr[i];
		if(prefix==k)
		    count+=1;
		else if(mp.find(prefix-k)!=mp.end()){
			count+=mp[prefix-k];
		}
		mp[prefix]+=1;
		i+=1;
	}
	cout<<count;
return 0;
}
